<h1>Cree su post</h1>


<%= form_with(model: @post, local: true, html: {id: 'create_posts'}) do |form| %>

<div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, require: true, :class => 'form-control tamano' %>
</div>

<div class="form-group">
    <%= form.label :image_url %>
    <%= form.text_field :image_url, require: true, :class => 'form-control tamano' %>
</div>

<div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, require: true, :class => 'form-control tamano' %>
</div>

<div>
    <%= form.submit "Guardar" %>
</div>


<% end %>