<table class="table table-bordered">
    <tr>
        <th>Titulo</th>
        <th>Fecha de ingreso</th>
        <th>Imagen</th>
        <th>Contenido</th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
        <td><%= post.title %></td>
        <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= image_tag(post.image_url, style: 'width: 100px') %></td>
        <td><%= post.content %></td>
    </tr>
    <% end %>
</table>

